<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="io.sentry.log4j2">

    <Properties>
        <Property name="CONSOLE_LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSSSSS} %highlight{%-5level}{FATAL=red blink, ERROR=red, WARN=yellow bold,
            INFO=green, DEBUG=green bold, TRACE=blue} %style{[%thread]}{cyan} %style{[%X{traceId}]}{green}
            %style{[%X{userId}]}{magenta} %style{[%X{clientIp}]}{blue} %style{[%X{requestInfo}]}{yellow}
            %style{%logger{36}}{bright,white} - %msg%n
        </Property>
    </Properties>

    <Appenders>
        <!-- 콘솔 출력 - 색상 활성화 -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${CONSOLE_LOG_PATTERN}" disableAnsi="false"/>
        </Console>

        <!-- Sentry Appender -->
        <Sentry name="Sentry"/>
    </Appenders>

    <Loggers>
        <!-- 내 애플리케이션 로거 -->
        <Logger name="org.yapp" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="Sentry"/>
        </Logger>

        <!-- 루트 로거 -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="Sentry"/>
        </Root>
    </Loggers>
</Configuration>
